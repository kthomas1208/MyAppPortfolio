<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <TextView android:text="@string/my_apps_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/heading_text"
        android:id="@+id/textView" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/spotify_streamer"
        android:id="@+id/spotify_button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/button_top_margin"
        android:background="@color/primary"
        android:textColor="@color/button_text"
        android:onClick="showToast"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/scores_app"
        android:id="@+id/scores_button"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_below="@+id/spotify_button"
        android:layout_centerHorizontal="true"
        android:background="@color/primary"
        android:textColor="@color/button_text"
        android:onClick="showToast"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/library_app"
        android:id="@+id/library_button"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_below="@+id/scores_button"
        android:layout_centerHorizontal="true"
        android:background="@color/primary"
        android:textColor="@color/button_text"
        android:onClick="showToast"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/build_it_bigger"
        android:id="@+id/build_it_button"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_below="@+id/library_button"
        android:layout_centerHorizontal="true"
        android:background="@color/primary"
        android:textColor="@color/button_text"
        android:onClick="showToast"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/xyz_reader"
        android:id="@+id/xyz_button"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_below="@+id/build_it_button"
        android:layout_centerHorizontal="true"
        android:background="@color/primary"
        android:textColor="@color/button_text"
        android:onClick="showToast"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/capstone_app"
        android:id="@+id/capstone_button"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_below="@+id/xyz_button"
        android:layout_centerHorizontal="true"
        android:background="@color/accent"
        android:textColor="@color/button_text"
        android:onClick="showToast"/>
</RelativeLayout>

